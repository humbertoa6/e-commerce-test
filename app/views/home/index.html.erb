<!-- app/views/home/index.html.erb -->
<div class="flex flex-col items-center justify-center min-h-scree">
  <h1 class="text-4xl font-bold mb-8">Welcome to the Store</h1>

  <!-- CTA Section -->
  <div class="bg-white shadow-md rounded-lg p-8 w-full max-w-md text-center">
    <h2 class="text-2xl font-semibold mb-4">Manage Your Coupons and Cart</h2>
    <p class="text-gray-600 mb-6">You can create coupons or review your cart</p>

    <div class="flex justify-between">
      <!-- Button for the coupon creation table -->
      <%= link_to 'Create Coupons', coupons_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>

      <!-- Button to go to the cart -->
      <%= link_to 'View Cart', cart_path, class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>
</div>
